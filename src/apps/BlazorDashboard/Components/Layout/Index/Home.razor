@page "/home"
@using System.Security.Claims

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="home-container">
            @{
                var user = context.User;
                var identity = user.Identity;
                var authType = identity?.AuthenticationType ?? "N/A";
                var name = identity?.Name ?? "Anonymous";
                var isAuthenticated = identity?.IsAuthenticated == true;
                var allClaims = user.Claims.ToList();

                var roleClaims = allClaims
                .Where(c => c.Type == ClaimTypes.Role || c.Type == "role")
                .Select(c => c.Value)
                .Distinct()
                .ToList();

                var expClaim = allClaims.FirstOrDefault(c => c.Type == "exp");
                string? tokenExpiry = null;

                if (expClaim != null && long.TryParse(expClaim.Value, out var expUnix))
                {
                    var expiryDate = DateTimeOffset.FromUnixTimeSeconds(expUnix).ToLocalTime();
                    tokenExpiry = expiryDate.ToString("f");
                }
            }

            <h1>Dashboard</h1>
            <p class="welcome">Welcome, <strong>@name</strong>!</p>

            <div class="auth-info">
                <p><strong>Authenticated:</strong> @isAuthenticated</p>
                <p><strong>Auth Type:</strong> @authType</p>

                @if (tokenExpiry != null)
                {
                    <p><strong>Token Expiration:</strong> @tokenExpiry</p>
                }
            </div>

            <section class="claims-section">
                <h3>All Claims (@allClaims.Count)</h3>
                @if (allClaims.Any())
                {
                    <ul class="claims-list">
                        @foreach (var claim in allClaims)
                        {
                            <li><strong>@claim.Type:</strong> @claim.Value</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No claims found.</p>
                }
            </section>

            <section class="roles-section">
                <h3>Roles (@roleClaims.Count)</h3>
                @if (roleClaims.Any())
                {
                    <ul class="claims-list">
                        @foreach (var role in roleClaims)
                        {
                            <li>@role</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No roles found.</p>
                }
            </section>
        </div>
    </Authorized>
</AuthorizeView>

<style>
    .home-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 1.5rem;
        background: var(--mud-palette-background, #fff);
        border-radius: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    h1 {
        color: var(--mud-palette-primary, #695cfe);
        margin-bottom: 0.5rem;
        font-size: 1.75rem;
        text-align: center;
    }

    .welcome {
        text-align: center;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .auth-info {
        margin-bottom: 2rem;
        background: var(--mud-palette-surface, #f8f8fa);
        padding: 1rem;
        border-radius: 0.5rem;
        font-size: 0.95rem;
    }

    .claims-section, .roles-section {
        display: flex;
        flex-direction: column;
        margin-bottom: 2rem;
    }

    .claims-list {
        list-style: none;
        padding: 0;
        font-size: 0.9rem;
    }

        .claims-list li {
            background: var(--mud-palette-surface, #f6f5ff);
            margin: 0.4rem 0;
            padding: 0.6rem 0.8rem;
            border-radius: 0.4rem;
            word-break: break-all;
        }

    @@media (max-width: 600px) {
        .home-container {
            padding: 1rem;
            margin: 1rem;
        }

        h1 {
            font-size: 1.4rem;
        }

        .auth-info, .claims-list li {
            font-size: 0.85rem;
        }
    }
</style>
