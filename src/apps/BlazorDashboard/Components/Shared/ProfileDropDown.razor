<MudPaper Class="pa-4">
    <MudStack Spacing="0">
        <MudButton OnClick="OnExpandCollapseClick">@(_expanded ? "Collapse" : "Expand")</MudButton>
        <MudDivider />
        <MudCollapse Expanded="_expanded">
            This content is collapsible.s
        </MudCollapse>
    </MudStack>
</MudPaper>
@code {
    bool _expanded = false;

    private void OnExpandCollapseClick()
    {
        _expanded = !_expanded;
    }
}
